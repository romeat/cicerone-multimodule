<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/toFeature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Feature 1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/toFeature2"/>

    <Button
        android:id="@+id/toFeature2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Feature 2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toFeature"
        app:layout_constraintBottom_toTopOf="@id/toB" />

    <Button
        android:id="@+id/toB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Fragment B (Not implemented)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toFeature2"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>